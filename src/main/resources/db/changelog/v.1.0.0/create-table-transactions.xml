<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="003-create-table-transactions" author="qaisar">
        <createTable schemaName="wallet_service_db" tableName="transactions">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="custom_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="SERIAL">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableSchemaName="wallet_service_db" baseTableName="transactions" baseColumnNames="player_id"
                                 constraintName="fk_transactions_wallet"
                                 referencedTableSchemaName="wallet_service_db" referencedTableName="players" referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>