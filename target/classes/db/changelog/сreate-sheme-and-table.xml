<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-scheme" author="qaisar">
        <sql>
            CREATE SCHEMA IF NOT EXISTS wallet_service_db;
        </sql>
    </changeSet>

    <changeSet id="002-create-table-players" author="qaisar">
        <createTable schemaName="wallet_service_db" tableName="players">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(256)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL(10, 2)" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-table-transactions" author="qaisar">
        <createTable schemaName="wallet_service_db" tableName="transactions">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="custom_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-table-audits" author="qaisar">
        <createTable schemaName="wallet_service_db" tableName="audits">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="audit_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="action_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="player_full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
